<script is:inline>
	// Warten bis das DOM geladen ist
	document.addEventListener('DOMContentLoaded', function() {
		console.log('DOM loaded, setting up job cards');
		
		// Alle Job-Cards finden
		const jobCards = document.querySelectorAll('.job-card');
		console.log('Found job cards:', jobCards.length);
		
		// Jede Card initialisieren
		jobCards.forEach((card, index) => {
			console.log(`Initializing card ${index + 1}`);
			
			// Card als collapsed markieren
			card.classList.add('collapsed');
			
			// Event Listener für den Header hinzufügen
			const header = card.querySelector('.job-header');
			if (header) {
				header.addEventListener('click', function(e) {
					e.preventDefault();
					e.stopPropagation();
					console.log(`Card ${index + 1} header clicked`);
					toggleCard(card);
				});
			}
		});
	});

	function toggleCard(card) {
		console.log('Toggling card:', card);
		
		// Alle anderen Cards schließen
		const allCards = document.querySelectorAll('.job-card');
		allCards.forEach(otherCard => {
			if (otherCard !== card) {
				otherCard.classList.remove('expanded');
				otherCard.classList.add('collapsed');
			}
		});
		
		// Aktuelle Card togglen
		if (card.classList.contains('collapsed')) {
			card.classList.remove('collapsed');
			card.classList.add('expanded');
			console.log('Card expanded');
		} else {
			card.classList.remove('expanded');
			card.classList.add('collapsed');
			console.log('Card collapsed');
		}
	}

	function applyForJob(button) {
		console.log('Apply button clicked');
		
		// Finde die Job-Card, die den Button enthält
		const jobCard = button.closest('.job-card');
		const jobTitle = jobCard.querySelector('.job-header h3').textContent;
		
		console.log('Job title found:', jobTitle);
		
		// Erstelle den E-Mail-Link mit der Position im Betreff
		const emailSubject = encodeURIComponent(`Bewerbung für: ${jobTitle}`);
		const emailBody = encodeURIComponent(`Sehr geehrte Damen und Herren,\n\nhiermit bewerbe ich mich für die Position "${jobTitle}" in Ihrem Unternehmen.\n\nMit freundlichen Grüßen`);
		const emailLink = `mailto:kontakt@heilgendorff.de?subject=${emailSubject}&body=${emailBody}`;
		
		console.log('Email link:', emailLink);
		
		// Öffne den E-Mail-Client
		window.location.href = emailLink;
	}

	function applyGeneral() {
		console.log('General apply button clicked');
		
		// Erstelle den E-Mail-Link mit einfachem Betreff
		const emailSubject = encodeURIComponent('Bewerbung');
		const emailBody = encodeURIComponent(`Sehr geehrte Damen und Herren,\n\nhiermit bewerbe ich mich in Ihrem Unternehmen.\n\nMit freundlichen Grüßen`);

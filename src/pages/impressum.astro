---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
---

<!DOCTYPE html>
<html lang="de">
	<head>
		<BaseHead title="Impressum - Heilgendorff Steuerberatung" />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-content">
					<h1 data-translate="imprintTitle">Impressum</h1>
				</div>
			</section>

			<section class="content-section">
				<div class="container">
					<h2 data-translate="imprintLegalTitle">Pflichtangaben nach § 5 TMG</h2>
					
					<div class="impressum-content">
						<div class="impressum-item">
							<h3 data-translate="imprintCompany">Firma:</h3>
							<p data-translate="imprintCompanyName">Dipl.Kfm. Steuerberater<br>
							Burghard Heilgendorff</p>
						</div>

						<div class="impressum-item">
							<h3 data-translate="imprintContact">Elektronische Kontaktaufnahme:</h3>
							<p data-translate="imprintContactDetails">E-Mail: kanzlei@heilgendorff.de<br>
							Internet: www.heilgendorff.de</p>
						</div>

						<div class="impressum-item">
							<h3 data-translate="imprintAddress">Adresse:</h3>
							<p data-translate="imprintAddressDetails">Unter den Eichen 7 (Gebäude F)<br>
							65195 Wiesbaden<br>
							Telefon: 0611-3913200</p>
						</div>

						<div class="impressum-item">
							<h3 data-translate="imprintAuthority">Zuständige Aufsichtsbehörde:</h3>
							<p data-translate="imprintAuthorityDetails">Mitglied der Steuerberaterkammer Hessen in Frankfurt/Main.</p>
						</div>

						<div class="impressum-item">
							<h3 data-translate="imprintProfessionTitle">Gesetzliche Berufsbezeichnung:</h3>
							<p data-translate="imprintProfessionText">Die gesetzliche Berufsbezeichnung Steuerberater wurde in der Bundesrepublik Deutschland im Bundesland Hessen verliehen.</p>
						</div>

						<div class="impressum-item">
							<h3 data-translate="imprintRegulationsTitle">Berufsrechtliche Regelungen:</h3>
							<p data-translate="imprintRegulationsText">Unsere Tätigkeit beruht auf den berufsrechtlichen Regelungen:</p>
							<ul>
								<li data-translate="imprintRegulation1">Steuerberatungsgesetz</li>
								<li data-translate="imprintRegulation2">Durchführungsverordnung zum Steuerberatungsgesetz</li>
								<li data-translate="imprintRegulation3">Berufsordnung</li>
								<li data-translate="imprintRegulation4">Steuerberatergebührenverordnung</li>
							</ul>
						</div>

						<div class="impressum-item">
							<h3 data-translate="imprintInsuranceTitle">Berufshaftpflichtversicherung:</h3>
							<p data-translate="imprintInsuranceText">HDI Gerling Firmen und Privat Versicherung AG<br>
							Riethorst 2, 30659 Hannover<br>
							Geltungsbereich: Der Versicherungsschutz bezieht sich nicht auf Haftpflichtansprüche, die vor ausländischen Gerichten geltend gemacht werden.</p>
						</div>

						<div class="impressum-item">
							<h3 data-translate="imprintResponsibleTitle">Verantwortlich für den Inhalt (gem. § 55 Abs. 2 RStV):</h3>
							<p data-translate="imprintResponsibleText">Burghard Heilgendorff</p>
						</div>
					</div>

					<div class="disclaimer-section">
						<h2 data-translate="imprintDisclaimerTitle">Haftungsausschluss</h2>
						
						<div class="disclaimer-item">
							<h3 data-translate="imprintDisclaimer1Title">1. Inhalt der Webpräsentation</h3>

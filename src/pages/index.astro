</style>

<script>
	let currentTestimonial = 0;
	let testimonials: NodeListOf<Element>;
	let autoPlayInterval: number | null = null;
	let isPaused = false;

	document.addEventListener('DOMContentLoaded', function() {
		testimonials = document.querySelectorAll('.testimonial');
		if (!testimonials.length) return;
		showTestimonial(0);
		startAutoPlay();

		const pauseBtn = document.getElementById('testimonialPause');
		const prevBtn = document.getElementById('testimonialPrev');
		const nextBtn = document.getElementById('testimonialNext');

		pauseBtn?.addEventListener('click', togglePause);
		prevBtn?.addEventListener('click', () => { previousTestimonial(); if (isPaused) return; stopAutoPlay(); startAutoPlay(); });
		nextBtn?.addEventListener('click', () => { nextTestimonial(); if (isPaused) return; stopAutoPlay(); startAutoPlay(); });
	});

	function togglePause() {
		isPaused = !isPaused;
		const pauseBtn = document.getElementById('testimonialPause');
		if (isPaused) {
			stopAutoPlay();
			if (pauseBtn) { pauseBtn.textContent = 'Abspielen'; pauseBtn.setAttribute('aria-label', 'Automatischen Wechsel fortsetzen'); }
		} else {
			startAutoPlay();
			if (pauseBtn) { pauseBtn.textContent = 'Pause'; pauseBtn.setAttribute('aria-label', 'Automatischen Wechsel pausieren'); }
		}
	}

	function showTestimonial(index: number) {
		if (!testimonials?.length || index < 0 || index >= testimonials.length) return;
		testimonials.forEach((testimonial) => {
			testimonial.classList.remove('active');
			const el = testimonial as HTMLElement;
			el.style.opacity = '0';
			el.style.transform = 'translateY(20px)';
			el.style.zIndex = '1';
			el.style.visibility = 'hidden';
			el.style.position = 'absolute';
		});
		const current = testimonials[index] as HTMLElement;
		current.classList.add('active');
		current.style.opacity = '1';
		current.style.transform = 'translateY(0)';
		current.style.zIndex = '2';
		current.style.visibility = 'visible';
		current.style.position = 'relative';
	}

	function nextTestimonial() {
		currentTestimonial = (currentTestimonial + 1) % testimonials.length;
		showTestimonial(currentTestimonial);
	}

	function previousTestimonial() {
		currentTestimonial = (currentTestimonial - 1 + testimonials.length) % testimonials.length;
		showTestimonial(currentTestimonial);
	}

	function startAutoPlay() {
		stopAutoPlay();
		autoPlayInterval = window.setInterval(nextTestimonial, 10000);
	}

	function stopAutoPlay() {
		if (autoPlayInterval !== null) {
			clearInterval(autoPlayInterval);
			autoPlayInterval = null;
		}
	}
</script>


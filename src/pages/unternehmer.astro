		<script is:inline>
			document.addEventListener('DOMContentLoaded', function() {
				const serviceTabs = document.querySelectorAll('.service-tab');
				const serviceDetails = document.querySelectorAll('.service-detail');

				// Set first tab as active by default
				if (serviceTabs.length > 0) {
					serviceTabs[0].classList.add('active');
					const firstService = serviceTabs[0].getAttribute('data-service');
					const firstDetail = document.getElementById(firstService + '-detail');
					if (firstDetail) {
						firstDetail.classList.add('active');
					}
				}

				serviceTabs.forEach((tab, index) => {
					tab.addEventListener('click', function(e) {
						e.preventDefault();
						e.stopPropagation();
						
						const serviceType = this.getAttribute('data-service');
						
						// Remove active class from all tabs and details
						serviceTabs.forEach(t => t.classList.remove('active'));
						serviceDetails.forEach(d => d.classList.remove('active'));
						
						// Add active class to clicked tab
						this.classList.add('active');
						
						// Show corresponding detail
						const targetDetail = document.getElementById(serviceType + '-detail');
						if (targetDetail) {
							targetDetail.classList.add('active');
							console.log('Showing detail for:', serviceType, 'Detail ID:', targetDetail.id);
						} else {
							console.error('Detail not found for service:', serviceType);
						}
					});
				});


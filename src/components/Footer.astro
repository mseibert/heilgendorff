<style>
	footer {
		background: #c09b00;
		color: white;
		padding: 3rem 0 1em 0;
		margin-top: 4rem;
		width: 100vw;
		position: relative;
		left: 50%;
		right: 50%;
		margin-left: -50vw;
		margin-right: -50vw;
	}

	.footer-content {
		width: 60vw;
		margin: auto;
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 3rem;
		margin-bottom: 2rem;
		padding: 0 4rem;
		position: relative;
		left: 50%;
		right: 50%;
		margin-left: calc(-30vw - 50px);
		margin-right: calc(-30vw - 100px);
	}

	.footer-left h4,
	.footer-center h4,
	.footer-right h4 {
		color: white;
		margin-bottom: 1rem;
		font-family: "Merriweather", serif;
	}

	.footer-left p,
	.footer-center p {
		margin-bottom: 0.5rem;
		color: rgba(255, 255, 255, 0.9);
	}

	.footer-left a {
		color: rgba(255, 255, 255, 0.9);
		text-decoration: none;
		font-family: "IBM Plex Sans", sans-serif;
	}

	.footer-left a:hover {
		color: white;
		text-decoration: underline;
	}

	.logos {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
	}

	.logo-img {
		width: 100%;
		height: auto;
		max-width: 120px;
		border-radius: 8px;
		transition: transform 0.3s ease, opacity 0.3s ease;
	}

	.logo-img:hover {
		transform: scale(1.05);
		opacity: 0.9;
	}

	.footer-bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.2);
		padding-top: 1rem;
		color: rgba(255, 255, 255, 0.8);
	}

	.footer-bottom-grid {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 60vw;
		position: relative;
		left: 50%;
		right: 50%;
		margin-left: calc(-30vw - 50px);
		margin-right: calc(-30vw - 100px);
		padding: 0 4rem;
	}

	.footer-bottom-left {
		text-align: left;
	}


	.footer-bottom-right {
		text-align: right;
	}

	.footer-bottom p {
		margin: 0;
	}

	.social-buttons {
		display: flex;
		gap: 1rem;
	}

	.social-button {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: rgba(255, 255, 255, 0.1);
		color: white;
		text-decoration: none;
		border-radius: 6px;
		font-family: "IBM Plex Sans", sans-serif;
		font-size: 0.9rem;
		transition: all 0.3s ease;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.social-button:hover {
		background: rgba(255, 255, 255, 0.2);
		color: white;
		text-decoration: none;
		transform: translateY(-2px);
	}

	.social-button.linkedin:hover {
		background: #0077b5;
		border-color: #0077b5;
	}

	.social-button.instagram:hover {
		background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
		border-color: #bc1888;
	}

	/* Tablet styles (iPad) */
	@media (max-width: 1024px) and (min-width: 721px) {
		.footer-content {
			width: 56vw;
			margin-left: -35vw;
			margin-right: -35vw;
		}

		.footer-bottom-grid {
			width: 56vw;
			margin-left: -35vw;
			margin-right: -35vw;
		}

		.footer-left h4,
		.footer-center h4,
		.footer-right h4 {
			font-size: 0.95rem;
			margin-bottom: 0.9rem;
		}

		.footer-left p,
		.footer-center p {
			font-size: 0.9rem;
			margin-bottom: 0.5rem;
		}

		.logo-img {
			max-width: 110px;
		}

		.social-button {
			padding: 0.5rem 0.9rem;
			font-size: 0.85rem;
		}

		.footer-bottom p {
			font-size: 0.9rem;
		}
	}

	@media (max-width: 720px) {
		.footer-content {
			grid-template-columns: 1fr;
			text-align: center;
			gap: 2rem;
			padding: 0 1rem;
			margin-left: -138px;
		}

		.logos {
			grid-template-columns: repeat(2, 1fr);
			justify-items: center;
		}

		.logo-img {
			max-width: 100px;
		}

		.footer-bottom-grid {
			grid-template-columns: 1fr;
			text-align: center;
			gap: 1.5rem;
			padding: 0 1rem;
			margin-left: -138px;
		}

		.footer-bottom-left,
		.footer-bottom-right {
			text-align: center;
		}

		.social-buttons {
			justify-content: center;
			flex-direction: column;
			gap: 0.5rem;
		}
	}
</style>

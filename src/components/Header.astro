---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { Image } from 'astro:assets';
import Logo from '../assets/images/logo.png';
---

<header>
	<nav>
		<div class="logo">
			<a href="/">
				<Image src={Logo} alt="Heilgendorff Logo" class="logo-image" width={200} height={50} />
			</a>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Startseite</HeaderLink>
			<HeaderLink href="/about">Ãœber uns</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	
	.logo {
		display: flex;
		align-items: center;
	}

	.logo-image {
		height: 50px;
		width: auto;
		max-width: 200px;
	}

	.logo a {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 720px;
		margin: auto;
		padding: 1rem 0;
	}
	
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: all 0.3s ease;
	}
	
	nav a:hover {
		color: var(--accent);
	}
	
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: var(--accent);
	}

	.internal-links {
		display: flex;
		gap: 1rem;
	}

	@media (max-width: 720px) {
		nav {
			flex-direction: column;
			gap: 1rem;
		}
		
		.internal-links {
			flex-wrap: wrap;
			justify-content: center;
		}

		.logo-image {
			height: 40px;
		}
	}
</style>
